<% content_for :page_title, "Appointments" %>

<p id="notice"><%= notice %></p>

<h2>Appointments</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Professional</th>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Notes</th>
      <th scope="col">Date</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.order_by_latest_first.each do |appointment| %>
      <tr>
        <td><%= appointment.professional.to_s %></td>
        <td><%= appointment.appointee %></td>
        <td><%= appointment.phone %></td>
        <td><%= appointment.notes %></td>
        <td><%= appointment.date.strftime('%d/%m/%Y %H:%M') %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_appointment_path %>
