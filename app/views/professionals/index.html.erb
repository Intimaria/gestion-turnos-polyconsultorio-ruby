<% content_for :page_title, "Professionals" %>

<p id="notice"><%= notice %></p>

<h2>Professionals</h2>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Pending</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @professionals.each do |professional| %>
      <tr>
        <td><%= professional.to_s%></td>
        <td><%= professional.total%></td>
        <td><%= link_to 'Show', professional %></td>
        <td><%= link_to 'Edit', edit_professional_path(professional) %></td>
        <td><%= link_to 'Destroy', professional, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'View Appointments', professional_appointments_path(professional) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Professional', new_professional_path %>
